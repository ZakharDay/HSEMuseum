<%= form_for(artwork) do |f| %>
  <% if artwork.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(artwork.errors.count, "error") %> prohibited this artwork from being saved:</h2>

      <ul>
      <% artwork.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @artist %>
    <%= f.hidden_field :artist_id, value: @artist.id %>
  <% else %>
    <div class="field">
      <%= f.label :artist_id %>
      <%#= f.number_field :artist_id %>
      <%= select("artwork", "artist_id", Artist.all.collect { |a| [a.name, a.id] }, { include_blank: true }) %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :year %>
    <%= f.number_field :year %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
