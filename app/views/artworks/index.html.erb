<p id="notice"><%= notice %></p>

<h1>Artworks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artworks.each do |artwork| %>
      <tr>
        <td><%= link_to artwork.title, artwork %></td>
        <td><%= link_to artwork.artist.name, artwork.artist %></td>
        <td><%= artwork.year %></td>

        <td>
          <% if can? :update, Artwork %>
            <%= link_to 'Edit', edit_artwork_path(artwork) %>
          <% end %>
        </td>

        <td>
          <% if can? :destory, Artwork %>
            <%= link_to 'Destroy', artwork, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Artwork %>
  <%= link_to 'New Artwork', new_artwork_path %>
<% end %>
