<p id="notice"><%= notice %></p>

<div style="<%= 'background-color: #' + @gallery.background %>">
  <p>
    <strong>Title:</strong>
    <%= @gallery.title %>
  </p>

  <p>
    <strong>Teaser:</strong>
    <%= @gallery.teaser %>
  </p>

  <p>
    <strong>Background:</strong>
    <%= @gallery.background %>
  </p>

  <% if can? :update, Gallery %>
    <%= link_to 'Edit', edit_gallery_path(@gallery) %>
  <% end %>

  <% @gallery.annotations.each do |annotation| %>
    <%= render 'annotations/show', annotation: annotation %>
  <% end %>

  <% @gallery.artworks.each do |artwork| %>
    <%= render 'artworks/show', artwork: artwork %>
  <% end %>
